server {
        listen {{ listen_port }};
        server_name {{ wordpress_server_name }};

        access_log {{ wordpress_access_log }};
        error_log {{ wordpress_error_log }};

location / {
        root {{ wordpress_root }};
        {{ wordpress_index }};

if (-f $request_filename) {
        expires 30d;
        break;
}

if (!-e $request_filename) {
        rewrite ^(.+)$ /index.php?q=$1 last;
        }
}

location ~ .php$ {
        fastcgi_pass   {{ wordpress_fastcgi_pass }};  # port where FastCGI processes were spawned
        fastcgi_index  index.php;
        fastcgi_param  SCRIPT_FILENAME   {{ wordpress_root }}$fastcgi_script_name;  # same path as above
        fastcgi_param PATH_INFO               $fastcgi_script_name;
        include {{ nginx_fastcgi_params }};
        }
}
